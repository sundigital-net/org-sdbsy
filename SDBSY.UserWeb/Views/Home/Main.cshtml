        </div></div>
</div>
<script type="text/javascript" src="~/hui/js/hui.js"></script>
<script type="text/javascript">
    var meuns = ['退出登录'];
    var cancel = '关闭菜单';
    hui('#hui-header-menu').click(function () {
        hui.actionSheet(meuns, cancel, function (e) {
            //console.log(e.index);
            //hui.toast(e.innerHTML);
            if (e.index == '0') {
                window.location.href = "/Home/Logout";
                        
            }
        });
    });
    hui("#add-obj").click(function () {
        window.location.href = "/Home/AddInfo";
    });
    hui("#edit-obj").click(function () {
        window.location.href = "/Home/ChildList/"+@Model.Id;
    });

</script>
