        /* 导出 */
        function daochu() {
            var vals = [];
            
            $('input[name="selectedIds"]:checked').each(function (index, item) {
                vals.push($(this).val());
            });
            if (vals.length <= 0) {
                layer.msg('请选择要导出的信息!', { icon: 2, time: 3000 });
                return;
            }
            
